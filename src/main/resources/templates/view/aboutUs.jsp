<%@ page contentType="text/html; charset=UTF-8" pageEncoding="UTF-8" %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="view/css/aboutUs.css">
</head>
<body>


<!-- About Us Section -->
<section class="about-detail-section">
    <div class="container">
        <!-- Phần giới thiệu ngắn về salon -->
        <div class="row">
            <div class="col-md-6 about-img animate__animated animate__fadeInLeft">
                <img src="images/barbershop.jpg" alt="Salon Image">
            </div>
            <div class="col-md-6 about-content animate__animated animate__fadeInRight">
                <h2>Our Story</h2>
                <p>
                    Founded in 1990, New Era Hair Salon has become a name synonymous with beauty and elegance. From our humble beginnings, we have grown to offer a range of premium services aimed at enhancing your natural beauty and confidence.
                </p>
                <p>
                    Our team is dedicated to staying at the forefront of styling trends and techniques to provide each client with a look that reflects their unique personality.
                </p>
            </div>
        </div>
        <!-- Phần hình ảnh nội thất hoặc đội ngũ -->
        <div class="row mt-5">
            <div class="col-md-4 gallery-item animate__animated animate__fadeInUp">
                <img src="images/Homeimg3.png" alt="Salon Interior" class="img-fluid">
                <p class="text-center mt-2">Đông phương bất bại</p>
            </div>
            <div class="col-md-4 gallery-item animate__animated animate__fadeInUp">
                <img src="images/Homeimg4.png" alt="Our Team" class="img-fluid">
                <p class="text-center mt-2">Văn-Phát trùm quan hệ rộng</p>
            </div>
            <div class="col-md-4 gallery-item animate__animated animate__fadeInUp">
                <img src="images/homeimg5.png" alt="Products" class="img-fluid">
                <p class="text-center mt-2">Phúc Quên Xe</p>
            </div>
        </div>
    </div>
</section>



<!-- Bootstrap JS and dependencies -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
